<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'list', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= image_tag @user.get_profile_image(70, 70) %></th>
            <th><%= @book.title %></th>
            <th><%= @book.body %></th>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
