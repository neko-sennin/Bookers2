<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Book Detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>name:<%= @book.user.name %></th>
              <th>Title:<%= @book.title %></th>
              <th>Opinion:<%= @book.body %></th>
              <th><%= link_to "edit", edit_user_path(@user) %></th>
              <th>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete %>
                <% end %>
              </th>
            </tr>
          </thead>
        </table>
    </div>
  </div>
</div>
